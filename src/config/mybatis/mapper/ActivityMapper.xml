<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ischoolbar.programmer.dao.ActivityDao">
	<!-- 活动插入操作 -->
	<insert id="add" parameterType="com.ischoolbar.programmer.entity.Activity" useGeneratedKeys="true" keyProperty="id">
		insert into activity(id,title,content,startTime,endTime,status,createTime,photo) values(null,#{title},#{content},#{startTime},#{endTime},#{status},#{createTime},#{photo})
	</insert>
	<!-- 活动编辑操作 -->
	<update id="edit" parameterType="com.ischoolbar.programmer.entity.Activity">
		update activity set title = #{title},content = #{content},startTime = #{startTime},endTime = #{endTime},status = #{status},photo = #{photo} where id = #{id}
	</update>
	<!-- 活动删除操作 -->
	<delete id="delete" parameterType="Long">
		delete from activity where id = #{value}
	</delete>
	<!-- 活动信息搜索查询 -->
	<select id="findList" parameterType="Map" resultType="com.ischoolbar.programmer.entity.Activity">
		select * from activity where 1 = 1
		<if test="title != null">
			and title like '%${title}%'
		</if>
		<if test="status != null">
			and status = #{status}
		</if>
		order by createTime desc
		<if test="offset != null and pageSize != null">
			limit #{offset},#{pageSize}
		</if>
	</select>
	<!-- 获取所有活动信息（仅上架） -->
	<select id="findAll" resultType="com.ischoolbar.programmer.entity.Activity">
		select * from activity where status = 1 order by createTime desc
	</select>
	<!-- 获取单个活动信息 -->
	<select id="find" parameterType="Long" resultType="com.ischoolbar.programmer.entity.Activity">
		select * from activity where id = #{value}
	</select>
	<!-- 模糊搜索总条数 -->
	<select id="getTotal" parameterType="Map" resultType="Integer">
		select count(*) from activity where 1=1
		<if test="title != null">
			and title like '%${title}%'
		</if>
		<if test="status != null">
			and status = #{status}
		</if>
	</select>
</mapper>
